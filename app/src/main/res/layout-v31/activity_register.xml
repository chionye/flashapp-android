<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <RelativeLayout
        android:id="@+id/create_account_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/create_acco"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <!-- Create Account -->
        <TextView
            android:id="@+id/create_account"
            android:layout_width="184dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:textStyle="bold"
            android:text="@string/create_acco"
            android:textAppearance="@style/create_acco"
            android:translationY="-0.66sp" />

        <TextView
            android:id="@+id/enter_your_"
            android:layout_width="307dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="102dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/enter_your_"
            android:textAppearance="@style/enter_your_"
            android:translationY="-0.11sp" />
        <!-- Full Name -->
        <TextView
            android:id="@+id/full_name"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="156dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/full_name"
            android:textAppearance="@style/full_name"
            android:translationY="-0.11sp" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="186dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/auto_layout"
            android:hint="Full name"
            android:paddingHorizontal="10dp"
            android:textColorHint="#546E7A"></EditText>

        <TextView
            android:id="@+id/email_address"
            android:layout_width="107dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="252dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/email_addre"
            android:textAppearance="@style/email_addre"
            android:translationY="-0.11sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="282dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/auto_layout"
            android:hint="Email Address"
            android:paddingHorizontal="10dp"
            android:textColorHint="#546E7A"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="116dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="348dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/phone_numbe"
            android:textAppearance="@style/phone_numbe"
            android:translationY="-0.11sp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="378dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/auto_layout"
            android:hint="Phone Number"
            android:paddingHorizontal="10dp"
            android:textColorHint="#546E7A"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/password"
            android:layout_width="73dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="444dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/password"
            android:textAppearance="@style/password"
            android:translationY="-0.11sp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="474dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/auto_layout"
            android:hint="Password"
            android:inputType="numberPassword"
            android:paddingHorizontal="10dp"
            android:textColorHint="#546E7A"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="572dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/button"
            android:text="CREATE ACCOUNT"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/i_already_h"
            android:layout_width="fill_parent"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:lineSpacingExtra="0sp"
            android:text="@string/i_already_h"
            android:textAlignment="center"
            android:textAppearance="@style/i_already_h"
            android:translationY="-0.11sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>