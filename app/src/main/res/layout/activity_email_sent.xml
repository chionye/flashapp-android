<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Email_sent">

    <RelativeLayout
        android:id="@+id/email_sent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/get_started"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/vector"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:src="@drawable/success" />

        <TextView
            android:id="@+id/email_verif"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="101dp"
            android:layout_marginTop="394dp"
            android:layout_marginRight="101dp"
            android:gravity="top"
            android:lineSpacingExtra="1sp"
            android:text="@string/email_verif"
            android:textAlignment="center"
            android:textAppearance="@style/email_verif"
            android:textStyle="bold"
            android:translationY="-0.66sp" />

        <TextView
            android:id="@+id/you_have_su"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="436dp"
            android:layout_marginRight="78dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="0sp"
            android:text="@string/you_have_su"
            android:textAppearance="@style/you_have_su"
            android:translationY="-0.11sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="528dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button"
            android:text="GO TO HOME"
            android:textColor="@color/black" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>